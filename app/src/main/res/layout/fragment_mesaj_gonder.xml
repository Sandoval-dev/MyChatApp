<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MesajGonder.MesajGonderFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mesaj Gönder"
                android:textStyle="bold" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mesajgonder_grup"
                android:layout_width="match_parent"
                android:layout_height="316dp" />

            <TextView
                android:id="@+id/mesajgonder_grubaekle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:foregroundGravity="center"
                android:gravity="center"
                android:text="Seçili Grup:"
                android:textSize="20sp"
                android:textStyle="bold|italic" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/mesajgonder_tumgrup"
                android:layout_width="match_parent"
                android:layout_height="248dp"
                android:padding="10dp">

            </androidx.recyclerview.widget.RecyclerView>

            <TextView
                android:id="@+id/mesajgonder_secilimesaj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Seçili Mesaj:"
                android:textAlignment="center" />

            <Button
                android:id="@+id/mesajgonder_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Toplu Mesaj Gönder" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittextbg"
            android:text="201913709055 - Osman Erdem Kılıç" />
    </LinearLayout>
</FrameLayout>